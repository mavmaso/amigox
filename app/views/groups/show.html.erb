<div style="width:800px; margin:0 auto;">
  <h2><%= @group.name %></h2>
  <h4>Usuarios:</h4>
  <% @group.user_groups.each do |group| %>
    <p>Email do usuario: <%= group.user.email %></p>
  <% end %>
  <%= link_to 'Convidar', invitation_path(@group), class: 'btn btn-primary' %>
  <%= link_to 'Editar', edit_group_path(@group), class: 'btn btn-primary' %>
  <%= link_to 'Apagar', group_path(@group), method: :delete, class: 'btn btn-primary' %>
</div>